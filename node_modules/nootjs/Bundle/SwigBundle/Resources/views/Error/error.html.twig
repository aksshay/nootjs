<html>
<head>
    <title>NootJS</title>
    <link rel="stylesheet" type="text/css" href="{{ "css/style.css" | asset }}">
</head>
<body>
    <h1>500 Internal server error</h1>
    <h3>{{ exception.name }}:</h3>
    <p>
        {{ exception.message }}
    </p>
    {% if exception.stack %}
        <h3>Stacktrace:</h3>
        <pre>
            {{ stack }}
        </pre>
    {% endif %}
</body>
</html>